{
  "name": "react-progressive-bg-image",
  "version": "3.0.0",
  "description": "Medium style progressive background image for React",
  "author": "Michael Hsu <evenchange4@gmail.com>",
  "license": "MIT",
  "typings": "./index.d.ts",
  "main": "lib/index.js",
  "files": ["lib", "index.d.ts"],
  "scripts": {
    "clean": "rm -rf lib",
    "prebuild": "npm run clean",
    "build":
      "NODE_ENV=production babel src --out-dir lib --ignore '**/*.example.js,**/__tests__/*'",
    "test": "NODE_ENV='test' jest --coverage --runInBand",
    "test:watch": "npm run test -- --watch",
    "start": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "eslint": "eslint ./",
    "flow": "flow",
    "precommit": "lint-staged",
    "format": "prettier --write 'src/**/*.js' '.storybook/*.js' '*.{md,json}'",
    "changelog":
      "github-changes -o evenchange4 -r react-progressive-bg-image -b master -f ./CHANGELOG.md --order-semver --use-commit-body"
  },
  "dependencies": {
    "prop-types": "^15.6.0",
    "ramda": "^0.25.0",
    "recompose": "^0.26.0",
    "rxjs": "^5.5.6"
  },
  "devDependencies": {
    "@storybook/addon-info": "3.3.11",
    "@storybook/addon-options": "3.3.11",
    "@storybook/addon-storyshots": "3.3.11",
    "@storybook/react": "3.3.11",
    "babel-cli": "6.26.0",
    "babel-eslint": "8.2.1",
    "babel-preset-env": "1.6.1",
    "babel-preset-react-app": "3.1.1",
    "codecov": "3.0.0",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "enzyme-to-json": "3.3.1",
    "eslint": "4.17.0",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-flowtype": "2.42.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jest": "21.7.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-prettier": "2.6.0",
    "eslint-plugin-react": "7.6.1",
    "flow-bin": "0.65.0",
    "github-changes": "1.1.2",
    "husky": "0.14.3",
    "jest": "22.1.4",
    "jest-styled-components": "next",
    "lint-staged": "6.1.0",
    "normalize.css": "8.0.0",
    "prettier": "1.10.2",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-test-renderer": "16.2.0",
    "styled-components": "3.1.4"
  },
  "babel": {
    "presets": [
      "react-app",
      [
        "babel-preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/setupTests.js",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/**/*.example.js"
    ],
    "testPathIgnorePatterns": ["<rootDir>/node_modules/", "<rootDir>/lib/"],
    "snapshotSerializers": ["enzyme-to-json/serializer"],
    "resetMocks": true,
    "resetModules": true
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "lint-staged": {
    "*.{js,json,md}": ["prettier --write", "git add"]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb",
      "plugin:flowtype/recommended",
      "plugin:jest/recommended",
      "prettier",
      "prettier/react",
      "prettier/flowtype"
    ],
    "plugins": ["prettier", "jest", "flowtype"],
    "env": {
      "jest/globals": true
    },
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [".js"]
        }
      ],
      "import/no-extraneous-dependencies": 0,
      "jsx-a11y/no-static-element-interactions": 0,
      "react/forbid-prop-types": 0,
      "react/require-default-props": 0,
      "prettier/prettier": "error"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "storybook-static",
    "lib",
    "flow-typed"
  ],
  "bugs": {
    "url": "https://github.com/evenchange4/react-progressive-bg-image/issues",
    "email": "evenchange4@gmail.com"
  },
  "homepage":
    "https://github.com/evenchange4/react-progressive-bg-image#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/evenchange4/react-progressive-bg-image.git"
  }
}
