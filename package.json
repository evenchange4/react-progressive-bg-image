{
  "name": "react-progressive-bg-image",
  "version": "2.0.4",
  "description": "Medium style progressive background image for React",
  "repository": "evenchange4/react-progressive-bg-image.git",
  "author": "Michael Hsu <evenchange4@gmail.com>",
  "bugs": {
    "url": "https://github.com/evenchange4/react-progressive-bg-image/issues",
    "email": "evenchange4@gmail.com"
  },
  "homepage": "https://github.com/evenchange4/react-progressive-bg-image#readme",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf lib",
    "prebuild": "npm run clean",
    "build": "NODE_ENV=production babel src --out-dir lib --ignore example.js,test.js",
    "test": "NODE_ENV='test' jest --coverage --runInBand",
    "test:watch": "npm run test -- --watch",
    "start": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepack": "npm run build",
    "eslint": "eslint ./",
    "format": "prettier --trailing-comma all --single-quote --write 'src/**/*.js' '.storybook/*.js'"
  },
  "dependencies": {
    "prop-types": "^15.5.10",
    "ramda": "^0.24.1",
    "recompose": "^0.24.0",
    "rxjs": "^5.4.2"
  },
  "devDependencies": {
    "@storybook/addon-info": "^3.1.9",
    "@storybook/addon-options": "^3.1.6",
    "@storybook/addon-storyshots": "^3.1.9",
    "@storybook/react": "^3.1.9",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react-app": "^3.0.1",
    "codecov": "^2.2.0",
    "enzyme": "^2.9.1",
    "enzyme-to-json": "^1.5.1",
    "eslint": "^3.19.0",
    "eslint-config-react-app": "^1.0.5",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.0.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-react": "^7.1.0",
    "jest": "^20.0.4",
    "jest-styled-components": "^4.0.3",
    "normalize.css": "^7.0.0",
    "prettier": "^1.5.3",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "styled-components": "^2.1.1"
  },
  "peerDependencies": {
    "react": "^15.6.1",
    "styled-components": "^2.1.0"
  },
  "babel": {
    "presets": [
      "react-app",
      [
        "babel-preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/**/*.example.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/lib/"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "react-app",
      "airbnb",
      "prettier",
      "prettier/flowtype",
      "prettier/react",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "prettier",
      "jest"
    ],
    "env": {
      "jest/globals": true
    },
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js"
          ]
        }
      ],
      "import/no-extraneous-dependencies": 0,
      "jsx-a11y/no-static-element-interactions": 0,
      "react/forbid-prop-types": 0,
      "react/require-default-props": 0,
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "trailingComma": "all"
        }
      ]
    }
  }
}
