{
  "name": "react-progressive-bg-image",
  "version": "2.1.1",
  "description": "Medium style progressive background image for React",
  "repository": "evenchange4/react-progressive-bg-image.git",
  "author": "Michael Hsu <evenchange4@gmail.com>",
  "bugs": {
    "url": "https://github.com/evenchange4/react-progressive-bg-image/issues",
    "email": "evenchange4@gmail.com"
  },
  "homepage": "https://github.com/evenchange4/react-progressive-bg-image#readme",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "main": "lib/index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf lib",
    "prebuild": "npm run clean",
    "build": "NODE_ENV=production babel src --out-dir lib --ignore example.js,test.js",
    "test": "NODE_ENV='test' jest --coverage --runInBand",
    "test:watch": "npm run test -- --watch",
    "start": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "eslint": "eslint ./",
    "format": "prettier --write 'src/**/*.js' '.storybook/*.js'"
  },
  "dependencies": {
    "prop-types": "^15.6.0",
    "ramda": "^0.24.1",
    "recompose": "^0.25.1",
    "rxjs": "^5.4.3"
  },
  "devDependencies": {
    "@storybook/addon-info": "3.3.9",
    "@storybook/addon-options": "3.3.9",
    "@storybook/addon-storyshots": "3.3.9",
    "@storybook/react": "3.3.9",
    "babel-cli": "6.26.0",
    "babel-eslint": "8.2.1",
    "babel-preset-env": "1.6.1",
    "babel-preset-react-app": "3.1.1",
    "codecov": "2.3.1",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "enzyme-to-json": "3.3.0",
    "eslint": "4.15.0",
    "eslint-config-airbnb": "15.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-config-react-app": "2.1.0",
    "eslint-plugin-flowtype": "2.41.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jest": "21.6.2",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-prettier": "2.5.0",
    "eslint-plugin-react": "7.5.1",
    "jest": "21.2.1",
    "jest-styled-components": "4.10.0",
    "normalize.css": "7.0.0",
    "prettier": "1.10.2",
    "raf": "3.4.0",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-test-renderer": "16.2.0",
    "styled-components": "2.4.0"
  },
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0",
    "styled-components": "^2.1.0"
  },
  "babel": {
    "presets": [
      "react-app",
      [
        "babel-preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/setupTests.js",
    "setupFiles": [
      "raf/polyfill"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.test.{js,jsx}",
      "!src/**/*.example.{js,jsx}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/lib/"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "react-app",
      "airbnb",
      "prettier",
      "prettier/flowtype",
      "prettier/react",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "prettier",
      "jest"
    ],
    "env": {
      "jest/globals": true
    },
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js"
          ]
        }
      ],
      "import/no-extraneous-dependencies": 0,
      "jsx-a11y/no-static-element-interactions": 0,
      "react/forbid-prop-types": 0,
      "react/require-default-props": 0,
      "prettier/prettier": "error"
    }
  }
}
